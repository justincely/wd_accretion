################
# Submit the simulations with condor
################

Executable  = call_mercury
Universe    = vanilla
priority    = 10
getenv      = true

notification = Complete
notify_user  = ely@stsci.edu 
RUN_PREFIX   = /user/ely/mercury/justin/data/simul_1.0_0.1_

transfer_executable = true
#should_transfer_files = IF_NEEDED
