error      = $(RUN_PREFIX)$(Process)/condor.err
output     = $(RUN_PREFIX)$(Process)/condor.out
log        = $(RUN_PREFIX)$(Process)/condor.log
arguments  = $(RUN_PREFIX)$(Process)

queue 20
